doctype html
html(lang="en")
    head
        title #{pageTitle} | wetube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body 
        header    
            small Hello #{fakeUser.username}
            nav
                ul 
                    if fakeUser.loggedIn 
                        li 
                            a(href='/logout') logout 
                    else
                        li 
                            a(href='/login') login
            h1=pageTitle
        main 
            block content
    include ../partials/footer