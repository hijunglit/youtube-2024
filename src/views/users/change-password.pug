extends ../base
block content 
    if errorMessage 
        span=errorMessage 

    form(method="POST")
        input(class="oldpassword" name="oldPassword" type="password" placeholder="old password" required) 
        input(class="oldpassword" name="newPassword" type="password" placeholder="New password" required)
        input(class="newpassword" name="newPasswordConfirm" type="password" placeholder="Confirm new password" required)
        input(type="submit" value="Change password")