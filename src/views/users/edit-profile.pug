extends ../base
block content 
    if errorMessage 
        span=errorMessage
    
    img(src="/" + loggedInUser.avatarUrl alt="avatar" width="100" height="100")
    form(method="POST" enctype="multipart/form-data")
        label(for="avatar") Choose a avatar image
        input(type="file" name="avatar" id="avatar" accept="image/*")
        input(placeholder="Name" type="text" name="name" value=loggedInUser.name required)
        input(placeHolder="Email" type="email" name="email" value=loggedInUser.email required)
        input(placeHolder="Username" type="text" name="username" value=loggedInUser.username required)
        input(placeHolder="Location" type="text" name="location" value=loggedInUser.location required)
        input(type="submit" value="Update Profile")
        
        if !loggedInUser.socialOnly 
            hr
            a(href="change-password") Change password &rarr;