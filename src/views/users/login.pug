extends ../base-no-header
block content
    if errorMessage 
        span=errorMessage
    div.login__login-form-wrapper 
        div.login__login-form 
            div.login-header
                i(class="fas fa-google")    
                h3 로그인
                p YouTube로 이동
            div.login-form
                form(method="POST")
                    input(class="login-info" type="text" name="username" placeholder="username" required)
                    input(class="login-info" type="password" name="password" placeholder="password" required)
                    input(class="login-submit" type="submit" value="Login")
                div.login__addition-option
                    a(href="user/github/start")
                        i(class="fab fa-github" style="padding-right: 6px") 
                        span github로 시작하기 &rarr;
                    hr(style="width: 100%")
                    div 
                        span 계정이 없으신가요? 
                        a(href="/join") 계정 생성하기 &rarr;  


