extends ../base
block content 
    if errorMessage 
        span=errorMessage
    div 
        video#preview
        button#actionBtn recorder!
    form(method="POST" enctype="multipart/form-data")
        label(for="video") Choose a video to upload 
        input(type="file" id="video" name="video" accept="video/*" required)
        label(for="thumbnail") Choose a thumbnail to upload 
        input(type="file" id="thumbnail" name="thumbnail" accept="image/*" required)
        input(name="title" type="text" placeholder="title" required)
        input(name="description" type="text" placeholder="description" required)
        input(name="hashtags" type="text" placeholder="hashtags" required)
        input(type="submit", value="Upload")
block scripts 
    script(src="/static/js/recorder.js") 
