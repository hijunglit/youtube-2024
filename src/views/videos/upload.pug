extends ../base
block content 
    if errorMessage 
        span=errorMessage
    div.video__record-container
        video#preview
        button#actionBtn record video
    form(method="POST" enctype="multipart/form-data" class="video__upload-form")
        label(for="video") Video file 
        input(class="upload-info" type="file" id="video" name="video" accept="video/*" required)
        label(for="thumbnail") Thumbnail file 
        input(class="upload-info" type="file" id="thumbnail" name="thumbnail" accept="image/*" required)
        input(class="upload-info" name="title" type="text" placeholder="title" required)
        input(class="upload-info" name="description" type="text" placeholder="description" required)
        input(class="upload-info" name="hashtags" type="text" placeholder="hashtags" required)
        input(class="upload-submit" type="submit", value="Upload")
block scripts 
    script(src="/static/js/main.js") 
    script(src="/static/js/recorder.js") 
